{
    "compilerOptions": {
        "lib": [
            "es6"
        ],
        "module": "commonjs",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "rootDir": "./src",
        "sourceMap": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}